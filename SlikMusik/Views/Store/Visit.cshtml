@model SlikMusik.Core.Store

@{
    ViewBag.Title = "title";
}

<h2>@Model.Name</h2>

<h3>@Model.Name Stock (@Model.InventorySize)</h3>

<ul>
    @foreach (var merchandize in Model.Inventory)
    {
        <li>@Html.ActionLink(merchandize.Name, "Show", "Merchandize", new {storeId = Model.Id, id = merchandize.Id}, null)</li>
    }
</ul>

@if (ViewBag.IsStoreOwner)
{
    @Html.ActionLink("Configure", "Configure", new { id = Model.Id }, new { @class = "button" })
}