@model SlikMusik.Domain.Store

@{
    ViewBag.Title = "title";
}

<h2>@Model.Name</h2>

<h3>@Model.Name Stock (@Model.Merchandize.Count)</h3>

<ul>
    @foreach (var merchandize in Model.Merchandize)
    {
        <li>@Html.ActionLink(merchandize.Name, "Show", "Merchandize", new {storeId = Model.Id, id = merchandize.Id}, null)</li>
    }
</ul>

@Html.ActionLink("Configure", "Configure", new {id = Model.Id})